script/source = "onready var initial = get_node(\"initial\")\nonready var tween = get_node(\"Tween\")\nonready var title = get_node(\"title\")\nonready var credit = get_node(\"credit\")\n\nfunc _ready():\n\ttitle.hide()\n\tinitial.show()\n\tcredit.hide()\n\tinitial.set_opacity(0)\n\ttween.interpolate_method(initial, \"set_opacity\", 0, 1, 3.0, Tween.TRANS_LINEAR, Tween.EASE_OUT, 1)\n\ttween.connect(\"tween_complete\", self, \"show_complete\")\n\ttween.start()\n\nfunc show_complete(obj, key):\n\ttween.interpolate_method(initial, \"set_opacity\", 1, 0, 3.0, Tween.TRANS_LINEAR, Tween.EASE_OUT, 4)\n\ttween.disconnect(\"tween_complete\", self, \"show_complete\")\n\ttween.connect(\"tween_complete\", self, \"splash_finish\")\n\ttween.start()\n\nfunc splash_finish(obj, key):\n\tprint(\"splash_finish\")\n\tinitial.hide()\n\ttitle.show()\n\tcredit.hide()\n\ttitle.set_opacity(0)\n\ttween.interpolate_method(title, \"set_opacity\", 0, 1, 3.0, Tween.TRANS_LINEAR, Tween.EASE_OUT, 1)\n\tif tween.is_connected(\"tween_complete\", self, \"splash_finish\"):\n\t\ttween.disconnect(\"tween_complete\", self, \"splash_finish\")\n\ttween.start()\n\t\n\nfunc show_credits():\n\ttitle.hide()\n\tinitial.hide()\n\tcredit.show()\n\tcredit.set_opacity(0)\n\ttween.interpolate_method(credit, \"set_opacity\", 0, 1, 2.0, Tween.TRANS_LINEAR, Tween.EASE_OUT, 0.5)\n\n\nfunc back_from_credits():\n\tsplash_finish(null, null)\n"

